{
  "name": "image_converter",
  "version": "1.0.2",
  "description": "A simple image converter software built with Electron.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "deploy": "electron-builder build --win --p always"
  },
  "build": {
    "appId": "com.image_converter.com",
    "productName": "Image Converter",
    "publish": [
      {
        "provider": "github",
        "owner": "Solaire_Kun",
        "repo": "image-converter",
        "releaseType": "release"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  },
  "keywords": [],
  "author": "Solaire",
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.0.1",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "dotenv": "^16.1.4",
    "electron-updater": "^5.3.0",
    "sharp": "^0.32.1"
  }
}